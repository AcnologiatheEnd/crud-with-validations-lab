<%= form_for(@song)  do |f| %>
  <%= label_tag "Title" %>
  <%= f.text_field :title %>
  
  <%= label_tag "Released" %>
  <%= f.check_box :released %>
  
  <%= label_tag "Released Year" %>
  <%= f.text_field :released_year %>
  
  <%= label_tag "Artist name" %>
  <%= f.text_field :artist_name %>
  
  <%= label_tag "Genre" %>
  <%= f.text_field :genre %>
  
  <%= f.submit %>
<% end %>